<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czy.user.mapper.mysql.UserMapper">
    <sql id="UserDoColumns">
        id,
        user_name,
        account,
        phone,
        register_time,
        last_online_time,
        avatar_file_id
    </sql>
    <insert id="insertUserInfo">
        INSERT INTO login_user
        (
        user_name,
        account,
        phone,
        register_time,
        last_online_time,
        avatar_file_id
        )
        VALUES
        (
        #{userName},
        #{account},
        #{phone},
        #{registerTime},
        #{lastOnlineTime},
        #{avatarFileId}
        )
    </insert>
    <update id="updateUserInfo">
        UPDATE login_user
        <set>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="avatarFileId != null">
                avatar_file_id = #{avatarFileId},
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <select id="getIdByAccount" resultType="java.lang.Long">
        SELECT id
        FROM login_user
        WHERE account = #{account}
    </select>
    <select id="getUserById" resultType="com.czy.api.domain.Do.user.UserDo">
        SELECT
            <include refid="UserDoColumns"/>
        FROM login_user
        WHERE id = #{id}
    </select>
    <select id="getUserByAccount" resultType="com.czy.api.domain.Do.user.UserDo">
        SELECT
            <include refid="UserDoColumns"/>
        FROM login_user
        WHERE account = #{account}
    </select>
    <select id="checkAccountExist" resultType="java.lang.Integer">
        SELECT count(*)
        FROM login_user
        WHERE account = #{account}
    </select>
    <select id="getUserByPhone" resultType="com.czy.api.domain.Do.user.UserDo">
        SELECT
            <include refid="UserDoColumns"/>
        FROM login_user
        WHERE phone = #{phone}
    </select>
    <select id="fuzzyGetByAccount" resultType="com.czy.api.domain.Do.user.UserDo">
        SELECT
            <include refid="UserDoColumns"/>
        FROM login_user
        WHERE account LIKE CONCAT('%', #{account}, '%')
    </select>
    <select id="getUserListByIdList" resultType="com.czy.api.domain.Do.user.UserDo">
        SELECT
        <include refid="UserDoColumns"/>
        FROM login_user
        WHERE
        <if test="list != null and list.size() > 0">
            id IN
            <foreach collection="list" item="id" open="(" separator="," close=")">
                <choose>
                    <when test="id != null">
                        #{id}
                    </when>
                    <otherwise>
                        NULL
                    </otherwise>
                </choose>
            </foreach>
        </if>
    </select>
</mapper>